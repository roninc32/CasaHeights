@model EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-edit text-primary"></i> Edit User
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditUser" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ExistingProfilePicture" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="text-center mb-4">
                            @if (!string.IsNullOrEmpty(Model.ExistingProfilePicture))
                            {
                                <img src="@Model.ExistingProfilePicture" class="rounded-circle mb-2"
                                     style="width: 100px; height: 100px; object-fit: cover;" alt="Profile Picture" />
                            }
                            else
                            {
                                <div class="avatar-circle bg-primary text-white mx-auto mb-2"
                                     style="width: 100px; height: 100px; font-size: 2.5rem;">
                                    @Model.Name.Substring(0, 1).ToUpper()
                                </div>
                            }
                            <div class="mb-3">
                                <label asp-for="ProfilePicture" class="form-label"></label>
                                <input asp-for="ProfilePicture" class="form-control" accept="image/*" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-phone"></i>
                                </span>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HouseNumber" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-home"></i>
                                </span>
                                <input asp-for="HouseNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="HouseNumber" class="text-danger"></span>
                        </div>

                        <!-- ... rest of the form (Role, Password fields) ... -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
