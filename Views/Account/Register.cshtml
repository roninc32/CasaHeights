@using CasaHeights.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Create an Account";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <div class="logo-container text-center mb-4">
            <!--<img src="~/img/logo.png" alt="Casa Heights Logo" class="logo" onerror="this.src='~/img/default-logo.png'; this.onerror='';" /> -->
            <h1 class="app-name">Casa Heights</h1>
        </div>
        
        <h2 class="text-center mb-3">Create Your Account</h2>
        <p class="text-center text-muted mb-4">Join our community and experience convenient living</p>
        
        <form asp-action="Register" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="row">
                <div class="col-12 mb-3">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="Full Name" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-12 mb-3">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="email" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" autocomplete="new-password" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" autocomplete="new-password" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" autocomplete="tel" />
                        <label asp-for="PhoneNumber"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="HouseNumber" class="form-control" placeholder="House/Unit Number" required />
                        <label asp-for="HouseNumber"></label>
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-4 mt-2">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="termsCheck" required />
                    <label class="form-check-label" for="termsCheck">
                        I agree to the <a href="#" class="text-decoration-none terms-link">Terms of Service</a> and <a href="#" class="text-decoration-none terms-link">Privacy Policy</a>
                    </label>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary w-100 p-3 mb-3 register-btn">
                <i class="bi bi-person-plus me-2"></i> Create Account
            </button>
            
            <p class="text-center mt-3 mb-3">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none login-link">Sign In</a>
            </p>
            
            <div class="text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary back-btn">
                    <i class="bi bi-arrow-left me-2"></i> Back to Home
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Add floating label animation effect
        document.querySelectorAll('.form-floating input').forEach(input => {
            input.addEventListener('focus', () => {
                input.parentElement.classList.add('focused');
            });
            input.addEventListener('blur', () => {
                if (!input.value) {
                    input.parentElement.classList.remove('focused');
                }
            });
            // Initialize state on page load
            if (input.value) {
                input.parentElement.classList.add('focused');
            }
        });
    </script>
}