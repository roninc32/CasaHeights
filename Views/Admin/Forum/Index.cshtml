@using CasaHeights.ViewModels.Forum.Admin
@using CasaHeights.Models.Forum.Enums
@model ForumAdminIndexViewModel
@{
    ViewData["Title"] = "Forum Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <!-- Dashboard Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Forum Management</h1>
        <div>
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm me-2">
                <i class="fas fa-plus fa-sm text-white-50 me-1"></i> New Category
            </a>
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm">
                <i class="fas fa-download fa-sm me-1"></i> Export Data
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0">
            <div class="card border-0 shadow-sm theme-card h-100 border-left-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-primary text-uppercase mb-1">Total Posts</h6>
                            <h3 class="mb-0 counter-animation">@Model.Statistics.TotalPosts</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-chat-dots text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-success small"><i class="fas fa-arrow-up me-1"></i>5.3% since last month</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0">
            <div class="card border-0 shadow-sm theme-card h-100 border-left-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-success text-uppercase mb-1">Active Users</h6>
                            <h3 class="mb-0 counter-animation">@Model.Statistics.ActiveUsers</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-people text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-success small"><i class="fas fa-arrow-up me-1"></i>8.7% since last month</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0">
            <div class="card border-0 shadow-sm theme-card h-100 border-left-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-warning text-uppercase mb-1">Reported Posts</h6>
                            <h3 class="mb-0 counter-animation">@Model.Statistics.ReportedPosts</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-flag text-warning fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-danger small"><i class="fas fa-arrow-up me-1"></i>2.1% since last week</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3 mb-xl-0">
            <div class="card border-0 shadow-sm theme-card h-100 border-left-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-info text-uppercase mb-1">Total Comments</h6>
                            <h3 class="mb-0 counter-animation">@Model.Statistics.TotalComments</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-chat text-info fs-4"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-success small"><i class="fas fa-arrow-up me-1"></i>12.4% since last month</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Management -->
    <div class="card border-0 shadow-sm theme-card">
        <div class="card-header theme-card-header py-3 d-flex align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Forum Content Management</h6>
            <div class="btn-group btn-group-sm">
                <a asp-action="Index" class="btn btn-outline-primary @(string.IsNullOrEmpty(Model.Filter) ? "active" : "")">
                    <i class="fas fa-list me-1"></i> All
                </a>
                <a asp-action="Index" asp-route-filter="reported" 
                   class="btn btn-outline-primary @(Model.Filter == "reported" ? "active" : "")">
                    <i class="fas fa-flag me-1"></i> Reported
                </a>
                <a asp-action="Index" asp-route-filter="pinned" 
                   class="btn btn-outline-primary @(Model.Filter == "pinned" ? "active" : "")">
                    <i class="fas fa-thumbtack me-1"></i> Pinned
                </a>
                <a asp-action="Index" asp-route-filter="deleted" 
                   class="btn btn-outline-primary @(Model.Filter == "deleted" ? "active" : "")">
                    <i class="fas fa-trash-alt me-1"></i> Deleted
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 theme-table align-middle">
                    <thead class="theme-table-header">
                        <tr>
                            <th class="ps-3">Title</th>
                            <th>Author</th>
                            <th class="d-none d-md-table-cell">Category</th>
                            <th>Status</th>
                            <th class="d-none d-md-table-cell">Created</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model.Posts)
                        {
                            <tr class="post-row" data-post-id="@post.Id">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        @if (post.IsPinned)
                                        {
                                            <i class="bi bi-pin-angle-fill text-primary me-2"></i>
                                        }
                                        <a asp-controller="Forum" asp-action="Post" 
                                           asp-route-id="@post.Id" class="text-decoration-none theme-link fw-bold">
                                            @post.Title
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/images/default-profile.jpg" class="rounded-circle me-2" width="32" height="32">
                                        @post.Author?.FullName
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell">
                                    @foreach (var category in post.Categories)
                                    {
                                        <span class="badge bg-light text-dark me-1">@category.Name</span>
                                    }
                                </td>
                                <td>
                                    @switch (post.Status)
                                    {
                                        case PostStatus.Active:
                                            <span class="badge bg-success">Active</span>
                                            break;
                                        case PostStatus.Reported:
                                            <span class="badge bg-warning">Reported</span>
                                            break;
                                        case PostStatus.Hidden:
                                            <span class="badge bg-secondary">Hidden</span>
                                            break;
                                        case PostStatus.Deleted:
                                            <span class="badge bg-danger">Deleted</span>
                                            break;
                                    }
                                </td>
                                <td class="d-none d-md-table-cell">
                                    <span data-bs-toggle="tooltip" title="@post.CreatedAt.ToString("MMMM dd, yyyy HH:mm")">
                                        @post.CreatedAt.ToString("MMM dd, yyyy")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-1">
                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                onclick="togglePin(@post.Id)" data-bs-toggle="tooltip" title="Toggle Pin">
                                            <i class="bi bi-pin-angle"></i>
                                        </button>
                                        <a href="#" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger"
                                                onclick="showDeleteModal(@post.Id)" data-bs-toggle="tooltip" title="Delete Post">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-transparent py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Delete Post Modal -->
<div class="modal fade" id="deletePostModal" tabindex="-1" aria-labelledby="deletePostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content theme-modal">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deletePostModalLabel">Delete Post</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="deletePostForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    </div>
                    <p class="text-center">Are you sure you want to delete this post?<br>This action cannot be undone.</p>
                    <div class="mb-3">
                        <label for="deletionReason" class="form-label">Reason for deletion:</label>
                        <textarea class="form-control theme-input" id="deletionReason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Delete Post
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Custom Card Borders */
    .border-left-primary {
        border-left: 4px solid var(--bs-primary) !important;
    }
    
    .border-left-success {
        border-left: 4px solid var(--bs-success) !important;
    }
    
    .border-left-warning {
        border-left: 4px solid var(--bs-warning) !important;
    }
    
    .border-left-info {
        border-left: 4px solid var(--bs-info) !important;
    }
    
    /* Custom Table Styles */
    .theme-table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
    }
    
    /* Row Hover Effects */
    .post-row {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .post-row:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1;
        position: relative;
    }
    
    /* Animation for counters */
    .counter-animation {
        animation: countUp 1s ease-out forwards;
        opacity: 0;
    }
    
    @@keyframes countUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    /* Card and theme styling */
    body {
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    body.dark-mode {
        background-color: #121212;
        color: #e0e0e0;
    }
    
    .dark-mode .theme-card {
        background-color: #1e1e1e !important;
        color: #e0e0e0;
        border: 1px solid #333 !important;
    }
    
    .dark-mode .theme-card-header {
        background-color: #282828 !important;
        border-bottom: 1px solid #333;
    }
    
    .dark-mode .theme-table {
        color: #e0e0e0;
    }
    
    .dark-mode .theme-table-header {
        background-color: #282828;
    }
    
    .dark-mode .theme-link {
        color: #90caf9;
    }
    
    .dark-mode .theme-input {
        background-color: #333;
        color: #e0e0e0;
        border-color: #555;
    }
    
    .dark-mode .theme-modal {
        background-color: #1e1e1e;
        color: #e0e0e0;
    }
    
    .dark-mode .modal-header, .dark-mode .modal-footer {
        border-color: #333;
    }
    
    .dark-mode .pagination .page-link {
        background-color: #333;
        border-color: #444;
        color: #e0e0e0;
    }
    
    .dark-mode .pagination .page-item.active .page-link {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }
    
    .dark-mode .badge.bg-light {
        background-color: #333 !important;
        color: #e0e0e0 !important;
    }
    
    /* Mobile optimizations */
    @@media (max-width: 767px) {
        .btn-group {
            display: flex;
        }
        
        .card-body {
            padding: 1rem;
        }
        
        h1.h3 {
            font-size: 1.5rem;
        }
    }
</style>

@section Scripts {
    <script>
        // Theme switcher functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Function to toggle pin status
            window.togglePin = function(postId) {
                const postRow = document.querySelector(`.post-row[data-post-id="${postId}"]`);
                postRow.classList.add('highlight-animation');
                
                if (confirm('Are you sure you want to toggle pin status for this post?')) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/Admin/Forum/PinPost/${postId}`;
                    
                    // Add anti-forgery token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    const tokenInput = document.createElement('input');
                    tokenInput.type = 'hidden';
                    tokenInput.name = '__RequestVerificationToken';
                    tokenInput.value = token;
                    form.appendChild(tokenInput);
                    
                    document.body.appendChild(form);
                    form.submit();
                } else {
                    setTimeout(() => {
                        postRow.classList.remove('highlight-animation');
                    }, 300);
                }
            }

            // Function to show delete modal
            window.showDeleteModal = function(postId) {
                const deleteForm = document.getElementById('deletePostForm');
                deleteForm.action = `/Admin/Forum/DeletePost/${postId}`;
                
                // Show the modal
                const deleteModal = new bootstrap.Modal(document.getElementById('deletePostModal'));
                deleteModal.show();
                
                // Highlight the selected row
                const allRows = document.querySelectorAll('.post-row');
                allRows.forEach(row => row.classList.remove('table-danger'));
                
                const selectedRow = document.querySelector(`.post-row[data-post-id="${postId}"]`);
                selectedRow.classList.add('table-danger');
            }
            
            // Initialize Bootstrap tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
            
            // Add highlight animation class
            const style = document.createElement('style');
            style.textContent = `
                .highlight-animation {
                    animation: highlightRow 0.6s ease;
                }
                
                @@keyframes highlightRow {
                    0%, 100% { background-color: transparent; }
                    50% { background-color: rgba(var(--bs-primary-rgb), 0.2); }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
}