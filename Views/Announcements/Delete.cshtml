@model CasaHeights.Models.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<h1>Delete Announcement</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this announcement?</h3>
</div>

<div class="card mb-4 announcement-card">
    <div class="card-header">
        <h5>@(Model.IsUrgent ? "URGENT: " : "")@Model.Title</h5>
    </div>
    <div class="card-body">
        <p>@Html.Raw(Model.Content)</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Posted Date</dt>
            <dd class="col-sm-9">@Model.PostedDate.ToString("g")</dd>
            
            <dt class="col-sm-3">Expiry Date</dt>
            <dd class="col-sm-9">@Model.ExpiryDate.ToShortDateString()</dd>
            
            <dt class="col-sm-3">Posted By</dt>
            <dd class="col-sm-9">@Model.CreatedBy?.FullName</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>