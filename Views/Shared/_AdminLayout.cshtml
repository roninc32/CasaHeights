                margin: 0;
            }
            
            #sidebar.active {
                left: 0;
            }
            
            /* Ensure submenus remain fully visible */
            #sidebar .collapse {
                display: none;
            }
            
            #sidebar .collapse.show {
                display: block;
            }
            
            #sidebar ul li ul.collapse li a {
                padding-left: 40px;
            }
            
            .overlay {
                display: none;
                position: fixed;
                width: 100vw;
                height: 100vh;
                background: rgba(0, 0, 0, 0.7);
                z-index: 1030;
                opacity: 0;
                transition: all 0.5s ease-in-out;
                top: 0;
                left: 0;
            }
            
            .overlay.active {
                display: block;
                opacity: 1;
            }
            
            body.sidebar-active {
                overflow: hidden;
            }
            
            #content {
                width: 100%;
                margin-left: 0;
                padding-left: 0;
            }
            
            .content {
                padding: 15px !important;
            }
        }
    </style>
</head>
