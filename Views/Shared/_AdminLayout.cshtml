            .navbar {
                padding: 0.5rem 1rem;
            }
            
            .admin-container {
                flex-direction: column;
            }
            
            #content {
                width: 100%;
            }
            
            .content {
                padding: 15px !important;
            }
            
            .card-body {
                padding: 1rem;
            }
            
            .navbar-nav .dropdown-menu {
                position: absolute;
            }
            
            .dropdown-menu {
                width: 280px;
                max-width: 100vw;
            }
            
