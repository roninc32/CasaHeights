            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            }
            
            // Theme toggler
            themeSwitcher.addEventListener('click', function() {
                document.body.classList.toggle('dark-mode');
                const isDark = document.body.classList.contains('dark-mode');
                localStorage.setItem('adminDarkMode', isDark ? 'true' : 'false');
                
                if (isDark) {
                    themeIcon.classList.replace('fa-moon', 'fa-sun');
                } else {
                    themeIcon.classList.replace('fa-sun', 'fa-moon');
                }
            });
            
            // Mobile sidebar toggle
            function toggleSidebar() {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
                document.body.classList.toggle('sidebar-active');
            }
            
            // Handle desktop sidebar toggle with content adjustment
            function toggleDesktopSidebar() {
                sidebar.classList.toggle('collapsed');
                
                // Fix the spacing issue when toggling
                if (sidebar.classList.contains('collapsed')) {
                    contentDiv.style.marginLeft = '0';
                } else {
                    contentDiv.style.marginLeft = '0';
                }
            }
            
            // Attach sidebar toggle events
            sidebarCollapse.addEventListener('click', function(e) {
                e.preventDefault();
                if (mobileView.matches) {
                    toggleSidebar();
                } else {
                    toggleDesktopSidebar();
                }
            });
            
            // Close sidebar when overlay is clicked
            overlay.addEventListener('click', toggleSidebar);
            
            // Handle dropdown toggles in sidebar
            const dropdownToggles = document.querySelectorAll('#sidebar [data-bs-toggle="collapse"]');
            dropdownToggles.forEach(toggle => {
                toggle.addEventListener('click', function(e) {
                    if (mobileView.matches) {
                        // Let normal dropdown behavior work on mobile
                    } else if (sidebar.classList.contains('collapsed')) {
                        // Prevent dropdown toggle when sidebar is collapsed on desktop
                        e.preventDefault();
                        e.stopPropagation();
                    }
                });
            });
            
            // Check collapsible state on media query change
            mobileView.addEventListener('change', function(e) {
                if (!e.matches) {
                    // Switching to desktop view
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                    document.body.classList.remove('sidebar-active');
                } else {
                    // Switching to mobile view
                    sidebar.classList.remove('collapsed');
                }
            });
            
            // Make links work correctly
            const sidebarLinks = document.querySelectorAll('#sidebar a:not([data-bs-toggle])');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function() {
                    if (mobileView.matches) {
                        toggleSidebar();
                    }
                });
            });
            
            // Apply initial layout fix
            if (sidebar.classList.contains('collapsed')) {
                contentDiv.style.marginLeft = '0';
            } else {
                contentDiv.style.marginLeft = '0';
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
