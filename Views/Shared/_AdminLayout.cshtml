            text-align: center;
            padding: 15px 0;
        }
        
        #sidebar.collapsed ul.components > li > a i {
            margin-right: 0;
            font-size: 1.2rem;
        }
        
        /* Fix for Mobile Sidebar */
        @@media (max-width: 768px) {
            .admin-container {
                position: relative;
                overflow-x: hidden;
                margin-left: 0;
                margin-right: 0;
                width: 100%;
            }
            
            #sidebar {
                position: fixed;
                top: 0;
                left: -260px;
