    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.querySelector('.overlay');
            const themeSwitcher = document.getElementById('themeSwitcher');
            const themeIcon = themeSwitcher.querySelector('i');
            const mobileView = window.matchMedia('(max-width: 768px)');
            const sidebarToggleBtn = document.getElementById('sidebarCollapse');
            
            // Check if user preference is stored
            const isDarkMode = localStorage.getItem('adminDarkMode') === 'true';
            
            // Apply initial theme
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                themeIcon.classList.remove('fa-moon');
                themeIcon.classList.add('fa-sun');
            }
            
            // Toggle theme when button is clicked
            themeSwitcher.addEventListener('click', function() {
                document.body.classList.toggle('dark-mode');
                
                if (document.body.classList.contains('dark-mode')) {
                    localStorage.setItem('adminDarkMode', 'true');
                    themeIcon.classList.remove('fa-moon');
                    themeIcon.classList.add('fa-sun');
                } else {
                    localStorage.setItem('adminDarkMode', 'false');
                    themeIcon.classList.remove('fa-sun');
                    themeIcon.classList.add('fa-moon');
                }
            });
            
            // Remove previous event listeners to avoid duplicates
            function removeAllEventListeners(element) {
                const newElement = element.cloneNode(true);
                element.parentNode.replaceChild(newElement, element);
                return newElement;
            }
            
            // Handle sidebar behavior based on screen size
            function handleSidebar() {
                // Reset elements after removing listeners
                sidebarToggleBtn = removeAllEventListeners(sidebarToggleBtn);
                overlay = removeAllEventListeners(overlay);
                
                if (mobileView.matches) {
                    // Mobile behavior - sidebar starts hidden, toggle shows/hides it
                    sidebarToggleBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        sidebar.classList.toggle('active');
                        overlay.classList.toggle('active');
                        document.body.classList.toggle('sidebar-active');
                    });
                    
                    // Close sidebar when clicking the overlay
                    overlay.addEventListener('click', function() {
                        sidebar.classList.remove('active');
                        overlay.classList.remove('active');
                        document.body.classList.remove('sidebar-active');
                    });
                    
                    // Reset any desktop-specific classes
                    sidebar.classList.remove('collapsed');
                } else {
                    // Desktop behavior - sidebar starts expanded, toggle collapses it
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                    document.body.classList.remove('sidebar-active');
                    
                    sidebarToggleBtn.addEventListener('click', function(e) {
                        e.preventDefault();
                        sidebar.classList.toggle('collapsed');
                    });
                }
            }
            
            // Fix for Bootstrap's collapse component on mobile
            document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(el => {
                el.addEventListener('click', function(e) {
                    // Prevent default only in desktop collapsed mode to allow submenu hover
                    if (mobileView.matches || !sidebar.classList.contains('collapsed')) {
                        // Let Bootstrap handle the toggle
                    } else {
                        e.preventDefault();
                    }
                });
            });
            
            // Initial setup and listen for screen size changes
            handleSidebar();
            mobileView.addEventListener('change', handleSidebar);
            
            // Close any dropdowns when clicking elsewhere
            document.addEventListener('click', function(event) {
                if (!event.target.closest('.dropdown-menu') && !event.target.closest('.dropdown-toggle')) {
                    const dropdowns = document.querySelectorAll('.dropdown-menu.show');
                    dropdowns.forEach(dropdown => {
                        dropdown.classList.remove('show');
                    });
                }
            });
        });
    </script>
