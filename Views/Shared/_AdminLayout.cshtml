    <style>
        :root {
            --primary-color: #4e73df;
            --primary-dark: #3a56b0;
            --secondary-color: #858796;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --light-color: #f8f9fc;
            --dark-color: #5a5c69;
            --transition-speed: 0.3s;
        }
        
        body {
            font-family: 'Nunito', sans-serif;
            transition: background-color var(--transition-speed), color var(--transition-speed);
        }
        
        body.dark-mode {
            background-color: #1a1a27;
            color: #e0e0e0;
        }
        
        .dark-mode #sidebar {
            background: #212130;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        }
        
        .dark-mode #sidebar .sidebar-header {
            background: #28283e;
            border-bottom: 1px solid #333344;
        }
        
        .dark-mode #sidebar ul li a {
            color: #e0e0e0;
            border-left: 3px solid transparent;
        }
        
        .dark-mode #sidebar ul li.active > a, 
        .dark-mode #sidebar ul li a:hover {
            color: #fff;
            background: rgba(255, 255, 255, 0.1);
            border-left: 3px solid var(--primary-color);
        }
        
        .dark-mode .navbar {
            background-color: #212130 !important;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }
        
        .dark-mode .navbar .nav-link {
            color: #e0e0e0 !important;
        }
        
        .dark-mode .dropdown-menu {
            background-color: #28283e;
            border: 1px solid #333344;
        }
        
        .dark-mode .dropdown-item {
            color: #e0e0e0;
        }
        
        .dark-mode .dropdown-item:hover {
            background-color: #333344;
            color: #fff;
        }
        
        .dark-mode .content {
            background-color: #1a1a27;
        }
        
        .dark-mode .card {
            background-color: #212130;
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(0, 0, 0, 0.15);
        }
        
        .dark-mode .card-header {
            background-color: #28283e;
            border-bottom: 1px solid #333344;
        }
        
        /* Enhanced Sidebar */
        #sidebar {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: all var(--transition-speed);
            width: 250px;
            min-width: 250px;
            position: relative;
            z-index: 999;
            height: 100vh;
            overflow-y: auto;
        }
        
        #sidebar .sidebar-header {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            background: #4e73df;
            background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-dark) 100%);
            color: white;
        }
        
        #sidebar ul li {
            margin: 0;
        }
        
        #sidebar ul li a {
            padding: 12px 20px;
            font-size: 1rem;
            display: block;
            color: var(--dark-color);
            border-left: 3px solid transparent;
            transition: all var(--transition-speed);
        }
        
        #sidebar ul li.active > a, 
        #sidebar ul li a:hover {
            background: rgba(78, 115, 223, 0.1);
            color: var(--primary-color);
            border-left: 3px solid var(--primary-color);
        }
        
        #sidebar ul li a i {
            margin-right: 10px;
            width: 20px;
            text-align: center;
        }
        
        #sidebar ul.collapse.show {
            background: rgba(0, 0, 0, 0.03);
        }
        
        #sidebar.collapsed {
            width: 60px;
            min-width: 60px;
        }
        
        #sidebar.collapsed .sidebar-header {
            padding: 10px;
        }
        
        #sidebar.collapsed .sidebar-header h4,
        #sidebar.collapsed .sidebar-header p,
        #sidebar.collapsed .nav-item span,
        #sidebar.collapsed ul li a span {
            display: none;
        }
        
        #sidebar.collapsed ul li a {
            text-align: center;
            padding: 15px 5px;
        }
        
        #sidebar.collapsed ul li a i {
            margin-right: 0;
            font-size: 1.2rem;
        }
        
        #sidebar.collapsed .collapse, 
        #sidebar.collapsed .collapsing {
            display: none !important;
        }
        
        #sidebar.collapsed ul li a::after {
            display: none;
        }
        
        /* Fix for sidebar collapse on web view */
        #sidebar.collapsed ul.components > li {
            position: relative;
        }
        
        #sidebar.collapsed ul.components > li > a {
            padding: 15px 10px;
            text-align: center;
        }
        
        #sidebar.collapsed ul.components > li > a > span,
        #sidebar.collapsed ul.components > li > a::after {
            display: none;
        }
        
        /* Hover submenu effect for collapsed sidebar on desktop */
        @@media (min-width: 769px) {
            #sidebar.collapsed ul.components > li:hover > ul.collapse {
                display: block !important;
                position: absolute;
                left: 60px;
                top: 0;
                width: 180px;
                background: #fff;
                box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
                z-index: 1000;
                border-radius: 0 4px 4px 0;
            }
            
            .dark-mode #sidebar.collapsed ul.components > li:hover > ul.collapse {
                background: #28283e;
            }
        }
        
        /* Mobile sidebar overlay */
        @@media (max-width: 768px) {
            #sidebar {
                position: fixed;
                left: -280px;
                height: 100vh;
                width: 250px;
                transition: left 0.3s ease;
            }
            
            #sidebar.active {
                left: 0;
            }
            
            .overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 998;
                opacity: 0;
                transition: opacity 0.3s ease;
            }
            
            .overlay.active {
                display: block;
                opacity: 1;
            }
            
            #content {
                width: 100%;
            }
            
            /* Fix for collapsible submenu on mobile */
            #sidebar ul.components li ul.collapse {
                background: rgba(0, 0, 0, 0.03);
            }
            
            .dark-mode #sidebar ul.components li ul.collapse {
                background: rgba(255, 255, 255, 0.05);
            }
            
            #sidebar ul.components li ul.collapse li a {
                padding-left: 40px;
            }
            
            body.sidebar-active {
                overflow: hidden;
            }
        }
        
        /* Mobile optimizations */
