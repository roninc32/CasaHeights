@{
    ViewData["Title"] = "Staff Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Staff Dashboard</h1>
            <p class="lead">Manage community operations and services</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- User Management -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-users"></i> User Management</h5>
                    <p class="card-text">Manage resident accounts and profiles</p>
                    <a href="#" class="btn btn-primary">Access</a>
                </div>
            </div>
        </div>

        <!-- Announcements -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-bullhorn"></i> Announcements</h5>
                    <p class="card-text">Post community news and notifications</p>
                    <a href="#" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>

        <!-- Billing -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-file-invoice"></i> Billing</h5>
                    <p class="card-text">Process payments and manage dues</p>
                    <a href="#" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>

        <!-- Facility Bookings -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-check"></i> Facility Bookings</h5>
                    <p class="card-text">Manage amenity reservations</p>
                    <a href="#" class="btn btn-primary">Check</a>
                </div>
            </div>
        </div>

        <!-- Service Requests -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-tools"></i> Service Requests</h5>
                    <p class="card-text">Handle maintenance and support tickets</p>
                    <a href="#" class="btn btn-primary">Process</a>
                </div>
            </div>
        </div>

        <!-- Documents -->
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-folder-open"></i> Documents</h5>
                    <p class="card-text">Access community files and forms</p>
                    <a href="#" class="btn btn-primary">Browse</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
}