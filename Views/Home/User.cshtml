@{
    Layout = "_UserLayout";
    ViewData["Title"] = "User Dashboard";
}

<div class="container-fluid">
    <!-- Profile Summary -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card profile-card">
                <div class="card-body d-flex align-items-center">
                    <img src="/images/default-profile.jpg" class="rounded-circle me-3" style="width: 64px; height: 64px;" alt="Profile Picture">
                    <div>
                        <h4 class="mb-0">Welcome, John Doe</h4>
                        <p class="mb-0">House #123 | Member since 2024</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card quick-action-card">
                <div class="card-body text-center">
                    <i class="fas fa-file-invoice fa-2x mb-2"></i>
                    <h5>Current Balance</h5>
                    <h3 class="text-primary">₱5,000.00</h3>
                    <button class="btn btn-primary btn-sm">Pay Now</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card quick-action-card">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-2x mb-2"></i>
                    <h5>Facility Booking</h5>
                    <p class="mb-2">Book amenities</p>
                    <button class="btn btn-primary btn-sm">Reserve Now</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card quick-action-card">
                <div class="card-body text-center">
                    <i class="fas fa-tools fa-2x mb-2"></i>
                    <h5>Service Request</h5>
                    <p class="mb-2">Report an issue</p>
                    <button class="btn btn-primary btn-sm">Submit Request</button>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card quick-action-card">
                <div class="card-body text-center">
                    <i class="fas fa-car fa-2x mb-2"></i>
                    <h5>Visitor Pass</h5>
                    <p class="mb-2">Register visitor</p>
                    <button class="btn btn-primary btn-sm">Request Pass</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Announcements and Calendar -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Announcements</h5>
                </div>
                <div class="card-body">
                    <div class="announcement-item mb-3">
                        <h6>Water Interruption Notice</h6>
                        <p class="text-muted mb-1">March 25, 2024</p>
                        <p>Scheduled water interruption from 10 AM to 2 PM for maintenance works.</p>
                    </div>
                    <div class="announcement-item mb-3">
                        <h6>Monthly Association Meeting</h6>
                        <p class="text-muted mb-1">March 30, 2024</p>
                        <p>Join us for the monthly association meeting at the clubhouse.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Upcoming Events</h5>
                </div>
                <div class="card-body">
                    <div class="event-item mb-2">
                        <small class="text-muted">Mar 25</small>
                        <p class="mb-0">Water Maintenance</p>
                    </div>
                    <div class="event-item mb-2">
                        <small class="text-muted">Mar 30</small>
                        <p class="mb-0">Association Meeting</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Service Requests and Documents -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Service Requests</h5>
                </div>
                <div class="card-body">
                    <div class="request-item mb-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6>Street Light Repair</h6>
                                <p class="text-muted mb-0">Ticket #SR001</p>
                            </div>
                            <span class="badge bg-warning">In Progress</span>
                        </div>
                    </div>
                    <div class="request-item mb-2">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6>Garbage Collection</h6>
                                <p class="text-muted mb-0">Ticket #SR002</p>
                            </div>
                            <span class="badge bg-success">Completed</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Important Documents</h5>
                </div>
                <div class="card-body">
                    <div class="document-item mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                <span>Community Guidelines</span>
                            </div>
                            <button class="btn btn-sm btn-outline-primary">Download</button>
                        </div>
                    </div>
                    <div class="document-item mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-file-pdf text-danger me-2"></i>
                                <span>Monthly Newsletter</span>
                            </div>
                            <button class="btn btn-sm btn-outline-primary">Download</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}