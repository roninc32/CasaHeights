@{
    ViewData["Title"] = "Casa Heights - Modern Living Community";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="overlay"></div>
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-6 hero-content" data-aos="fade-right">
                <h1 class="hero-title">Experience Luxury Living at Casa Heights</h1>
                <p class="hero-subtitle">Where Community Meets Comfort</p>
                <div class="hero-buttons">
                    <a href="/tour" class="btn btn-primary btn-lg">Take a Virtual Tour</a>
                    <a href="#about" class="btn btn-outline-light btn-lg ms-3">Learn More</a>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-scroll-indicator">
        <a href="#features"><i class="bi bi-chevron-down"></i></a>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section py-4">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 stat-item">
                <div class="stat-number">200+</div>
                <div class="stat-label">Happy Residents</div>
            </div>
            <div class="col-md-3 stat-item">
                <div class="stat-number">15</div>
                <div class="stat-label">Amenities</div>
            </div>
            <div class="col-md-3 stat-item">
                <div class="stat-number">24/7</div>
                <div class="stat-label">Security</div>
            </div>
            <div class="col-md-3 stat-item">
                <div class="stat-number">98%</div>
                <div class="stat-label">Satisfaction Rate</div>
            </div>
        </div>
    </div>
</div>

<!-- Features Grid -->
<section id="features" class="features-section">
    <div class="container">
        <div class="section-header text-center" data-aos="fade-up">
            <h2>Why Choose Casa Heights?</h2>
            <p class="lead">Experience the perfect blend of comfort and convenience</p>
        </div>
        <div class="features-grid">
            <div class="feature-item" data-aos="fade-up">
                <div class="feature-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h3>24/7 Security</h3>
                <p>Round-the-clock security with CCTV surveillance</p>
            </div>
            <!-- Add 5 more feature items -->
        </div>
    </div>
</section>

<!-- Amenities Showcase -->
<section class="amenities-section bg-light">
    <div class="container">
        <div class="section-header text-center" data-aos="fade-up">
            <h2>Premium Amenities</h2>
            <p class="lead">Discover our world-class facilities</p>
        </div>
        <div class="amenities-slider" data-aos="fade-up">
            <!-- Add image slides here -->
        </div>
    </div>
</section>

<!-- Community Life -->
<section class="community-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <img src="/images/community-life.jpg" class="img-fluid rounded-3" alt="Community Life">
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <div class="ps-lg-5">
                    <h2>Experience Community Living</h2>
                    <p class="lead">Join a vibrant community where neighbors become friends</p>
                    <ul class="community-features">
                        <li><i class="bi bi-check-circle"></i> Regular community events</li>
                        <li><i class="bi bi-check-circle"></i> Family-friendly environment</li>
                        <li><i class="bi bi-check-circle"></i> Active lifestyle promotion</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
    <div class="container">
        <div class="contact-wrapper bg-white rounded-4 shadow-lg">
            <div class="row g-0">
                <div class="col-lg-6 contact-info-side">
                    <div class="p-5">
                        <h2>Get in Touch</h2>
                        <p class="lead mb-4">We're here to answer any questions</p>
                        <div class="contact-details">
                            <!-- Contact details here -->
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 contact-form-side">
                    <div class="p-5">
                        <form class="contact-form">
                            <!-- Form fields here -->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
